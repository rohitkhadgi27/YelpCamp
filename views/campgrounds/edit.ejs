<%- include('../partials/header.ejs') %>

<div class = "container">	
	<div class = "newAndEditFormStyling col-lg-4 col-md-6 col-sm-10">
		<div class = "titleHeading">
			<h1>Edit <%= campground.name %> Campground</h1>
		</div>	
		<form action = "/campgrounds/<%= campground.id %>?_method=PUT" class = "was-validated" method = "POST">
			<div class = "form-group">
				<input type = "text" class = "form-control" name = "campground[name]" 
				value = "<%= campground.name %>" required />
				<div class = "valid-feedback">Valid</div>
				<div class = "invalid-feedback">Please fill out this field</div>
			</div>
			<div class = "form-group">
				<input type = "number" class = "form-control" name = "campground[price]" min = "0.01" 
				step = "0.01" value = "<%= campground.price %>" required/>
				<div class = "valid-feedback">Valid</div>
				<div class = "invalid-feedback">Please fill out this field</div>
			</div>
			<div class = "form-group">
				<input type = "text" class = "form-control" name = "campground[image]" 
				value = "<%= campground.image %>" required />
				<div class = "valid-feedback">Valid</div>
				<div class = "invalid-feedback">Please fill out this field</div>
			</div>
			<div class = "form-group">
				<input type = "text" class = "form-control" name = "campground[description]" 
				value = "<%= campground.description %>" required />
				<div class = "valid-feedback">Valid</div>
				<div class = "invalid-feedback">Please fill out this field</div>
			</div>
			<div class = "form-group">
				<input type = "submit" class = "form-control btn btn-success btn-large" value = "Update" />
			</div>		
		</form>
	</div>
</div>

<%- include('../partials/footer.ejs') %>
<%- include('../partials/header.ejs') %>

<div class = "container">	
	<div class = "newCommentFormStyling col-lg-4 col-md-6 col-sm-10">
		<div class = "titleHeading">
			<h2>Edit Comment</h2>
		</div>	
		<form action = "/campgrounds/<%= campground.id %>/comments/<%= comment.id %>?_method=PUT" 
			  class = "was-validated" method = "POST">
			<div class = "form-group">
				<input type = "text" class = "form-control" name = "comment[text]" 
					value = "<%= comment.text %>" required />
				<div class = "valid-feedback">Valid</div>
				<div class = "invalid-feedback">Please fill out this field</div>
			</div>
			<div class = "form-group">
				<input type = "submit" class = "form-control btn btn-success btn-large" value = "Update" />
			</div>		
		</form>
	</div>
</div>

